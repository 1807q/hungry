.box{
  width: 100%;
}
.header{
  width: 100%;
  height: 270rpx;
  background:purple;
}
.header_top{
  width: 100%;
  height: 210rpx;
  /* background: yellow; */
  display: flex;
  padding: 30rpx 20rpx 30rpx 30rpx;
  box-sizing: border-box; 
  justify-content: space-between;
}
.header_top>image{
  width: 155rpx;
  height:100%;
}
.header_top>view{
  width: 520rpx;
  height:100%;
  /* background: palegreen; */
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.header_top>view>view:nth-of-type(1){
  font-weight: bold;
}
.header_top>view>view:nth-of-type(1)>text:nth-of-type(1){
  padding: 5rpx 8rpx;
  font-size: 25rpx;
  background: #f81121;
  margin-right: 10rpx;
}
.header_top>view>view:nth-of-type(1)>text:nth-of-type(2){
  font-size: 35rpx;
}
  .header_top>view>view:nth-of-type(2){
  font-size: 31rpx;
}
.header_top>view>view:nth-of-type(3){
 display: flex;
 align-items: center;
 font-size: 25rpx;
 justify-content: space-between;
 /* background: red; */
}
.header_top>view>view:nth-of-type(3)>view:nth-of-type(1)>text:nth-of-type(1){
  color: red;
  background: white;
  padding: 3rpx 8rpx;
  font-size: 23rpx;
}
.header_top>view>view:nth-of-type(3)>view:nth-of-type(2){
  padding:15rpx 25rpx;
  background: rgba(0,0,0,0.5);
  border-radius: 50rpx;
}
.header_bottom{
  width: 100%;
  height: 60rpx;
  display: flex;
  padding: 0 20rpx 0 10rpx;
  box-sizing: border-box;
  font-size: 25rpx;
  color: white;
  background: rgba(0,0,0,0.4);
  align-items: center;
  justify-content: space-between;
}
.header_bottom>text:nth-of-type(1){
  background: white;
  color: black;
  font-weight: bold;
  border-radius: 5rpx;
  width: 60rpx;
  text-align: center;
  margin-right: 10rpx;
}
.header_bottom>view{
  text-overflow:ellipsis;
  white-space:nowrap;
  overflow:hidden;
  margin-right: 10rpx;
}